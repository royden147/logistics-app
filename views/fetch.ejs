<h3 class="mt-5 ml-5">Shipment Data</h3>

<p class="mt-4 ml-5" style="color: #682e8b;">Please click on any Shipment Order to see its Tracking Id, set its Tracking Status and Total Bill Amount!</p>

<table class="mt-5 table table-bordered table-hover">
  <thead>
    <tr style="background-color: #f5a199; border: 1px solid green;">
      <th scope="col" class="text-center">Order Id</th>
      <th scope="col" class="text-center">Order Weight</th>
      <th scope="col" class="text-center">Order Description</th>
      <th scope="col" class="text-center align-middle">Quantity</th>
      <th scope="col" class="text-center">Pickup Ready Day</th>
      <th scope="col" class="text-center">Customer Id</th>
      <th scope="col" class="text-center">Customer Name</th>
      <th scope="col" class="text-center">Customer Address</th>
      <th scope="col" class="text-center">Customer Tel</th>
      <th scope="col" class="text-center">Retailer Id</th>
      <th scope="col" class="text-center">Retailer Name</th>
      <th scope="col" class="text-center">Retailer Tel</th>
      <th scope="col" class="text-center">Retailer Address</th>
      <th scope="col" class="text-center">Logistics Id</th>
      <th scope="col" class="text-center">Logistics Name</th>
    </tr>
  </thead>
  <tbody>
     <% csvs.forEach(csv => { %>
      	<tr onclick="window.open('http://localhost:4000/orders/' + '<%= csv._doc._id %>', '_self');">
          <td class="align-middle text-center"> <%= csv._doc.Order_id %> </td>
          <td class="align-middle text-center"> <%= csv._doc.Order_weight %> </td>
          <td class="align-middle text-center"> <%= csv._doc.Order_description %> </td>
          <td class="align-middle text-center"> <%= csv._doc.Quantity %> </td>
          <td class="align-middle text-center"> <%= csv._doc.Pickup_Ready_Day %> </td>
          <td class="align-middle text-center"> <%= csv._doc.Customer_id %> </td>
          <td class="align-middle text-center"> <%= csv._doc.Customer__name %> </td>
          <td class="align-middle text-center"> <%= csv._doc.Customer_address %> </td>
          <td class="align-middle text-center"> <%= csv._doc.Customer_tel %> </td>
          <td class="align-middle text-center"> <%= csv._doc.retailer_id %> </td>
          <td class="align-middle text-center"> <%= csv._doc.retailer_name %> </td>
          <td class="align-middle text-center"> <%= csv._doc.retailer_tel %> </td>
          <td class="align-middle text-center"> <%= csv._doc.retailer_address %> </td>
          <td class="align-middle text-center"> <%= csv._doc.Logistics_id %> </td>
          <td class="align-middle text-center"> <%= csv._doc.Logistics_name %> </td>
        </tr>   
     <% }) %> 
  </tbody>
</table> 


